<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/patient_nav_graph"
    app:startDestination="@id/patientHomeFragment">

    <fragment
        android:id="@+id/patientHomeFragment"
        android:name="com.example.medibookandroid.ui.patient.fragment.PatientHomeFragment"
        android:label="fragment_patient_home"
        tools:layout="@layout/fragment_patient_home" >
        <action
            android:id="@+id/action_patientHomeFragment_to_patientDoctorDetailFragment"
            app:destination="@id/patientDoctorDetailFragment" />
        <!-- Action from Home to Settings (If needed, e.g., via icon) -->
        <action
            android:id="@+id/action_patientHomeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <!-- Action from Home to Notifications (If needed, e.g., via icon) -->
    </fragment>
    <fragment
        android:id="@+id/patientDoctorDetailFragment"
        android:name="com.example.medibookandroid.ui.patient.fragment.PatientDoctorDetailFragment"
        android:label="fragment_patient_doctor_detail"
        tools:layout="@layout/fragment_patient_doctor_detail" > <!-- Sửa layout nếu bạn đã đổi tên -->
        <argument
            android:name="doctorId"
            app:argType="string" />
        <action
            android:id="@+id/action_patientDoctorDetailFragment_to_bookingSummaryFragment"
            app:destination="@id/bookingSummaryFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookingSummaryFragment"
        android:name="com.example.medibookandroid.ui.patient.fragment.BookingSummaryFragment"
        android:label="fragment_booking_summary"
        tools:layout="@layout/fragment_booking_summary" > <!-- Sửa layout nếu bạn đã đổi tên -->
        <argument
            android:name="doctor"
            app:argType="com.example.medibookandroid.data.model.Doctor" />
        <argument
            android:name="schedule"
            app:argType="com.example.medibookandroid.data.model.DoctorSchedule" />
        <action
            android:id="@+id/action_bookingSummaryFragment_to_bookingSuccessFragment"
            app:destination="@id/bookingSuccessFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookingSuccessFragment"
        android:name="com.example.medibookandroid.ui.common.BookingSuccessFragment"
        android:label="fragment_booking_success"
        tools:layout="@layout/fragment_booking_success" >
        <action
            android:id="@+id/action_bookingSuccessFragment_to_patientHomeFragment"
            app:destination="@id/patientHomeFragment"
            app:popUpTo="@id/patientHomeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/patientAppointmentsFragment"
        android:name="com.example.medibookandroid.ui.patient.fragment.PatientAppointmentsFragment"
        android:label="fragment_patient_appointments"
        tools:layout="@layout/fragment_patient_appointments" />
    <fragment
        android:id="@+id/patientNotificationsFragment"
        android:name="com.example.medibookandroid.ui.patient.fragment.PatientNotificationsFragment"
        android:label="fragment_patient_notifications"
        tools:layout="@layout/fragment_patient_notifications" />
    <fragment
        android:id="@+id/patientProfileFragment"
        android:name="com.example.medibookandroid.ui.patient.fragment.PatientProfileFragment"
        android:label="fragment_patient_profile"
        tools:layout="@layout/fragment_patient_profile" > <!-- Sửa layout nếu bạn đã đổi tên -->
        <action
            android:id="@+id/action_patientProfileFragment_to_patientEditProfileFragment"
            app:destination="@id/patientEditProfileFragment" />
        <!-- Action from Profile to Settings -->
        <action
            android:id="@+id/action_patientProfileFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/patientEditProfileFragment"
        android:name="com.example.medibookandroid.ui.patient.fragment.PatientEditProfileFragment"
        android:label="fragment_patient_edit_profile"
        tools:layout="@layout/fragment_patient_edit_profile" />

    <!-- 1. BỔ SUNG CÁC FRAGMENT CÀI ĐẶT MỚI -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.medibookandroid.ui.patient.fragment.PatientSettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <!-- Actions from Settings to sub-settings screens -->
        <action
            android:id="@+id/action_settingsFragment_to_notificationSettingsFragment"
            app:destination="@id/notificationSettingsFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_languageSettingsFragment"
            app:destination="@id/languageSettingsFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_passwordManagerFragment"
            app:destination="@id/passwordManagerFragment" />
    </fragment>
    <fragment
        android:id="@+id/notificationSettingsFragment"
        android:name="com.example.medibookandroid.ui.common.NotificationSettingsFragment"
        android:label="fragment_notification_settings"
        tools:layout="@layout/fragment_notification_settings" />
    <fragment
        android:id="@+id/languageSettingsFragment"
        android:name="com.example.medibookandroid.ui.common.LanguageSettingsFragment"
        android:label="fragment_language_settings"
        tools:layout="@layout/fragment_language_settings" />
    <fragment
        android:id="@+id/passwordManagerFragment"
        android:name="com.example.medibookandroid.ui.common.PasswordManagerFragment"
        android:label="fragment_password_manager"
        tools:layout="@layout/fragment_password_manager" />

</navigation>
